<?php
/**
 * @var \Crealoz\TerribleModule\Block\FaqCategories $block
 * @var \Magento\Framework\Escaper $escaper
 */

$categories = $block->getCategories();
?>

<div class="faq-categories">
    <h3><?= $escaper->escapeHtml(__('FAQ Categories')) ?></h3>
    <ul>
        <?php foreach ($categories as $category => $count) : ?>
            <li>
                <span class="category-name"><?= $escaper->escapeHtml($category) ?></span>
                <span class="category-count">(<?= (int)$count ?>)</span>
            </li>
        <?php endforeach; ?>
    </ul>
</div>
